<div class="row">
  <div class="col-md-6">
    <ul class="list-unstyled list-group">
      {{#each}}
        <li class="list-group-item">
          {{#link-to "question" id}}{{question}}{{/link-to}}
          <span class="pull-right">asked by {{#link-to "new-question"}}{{author}}{{/link-to}}</span>
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    {{#link-to "new-question" class="btn btn-info"}}Ask a new question{{/link-to}}

    {{outlet}}
  </div>
</div>
